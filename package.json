{
  "name": "the-best-programming-language-v3",
  "version": "0.1.1",
  "description": "A transpiler for the BPL programming language targeting LLVM IR.",
  "main": "index.ts",
  "bin": {
    "bpl": "./bpl"
  },
  "scripts": {
    "start": "bun index.ts",
    "build": "bun build --compile --outfile=bpl ./index.ts",
    "check": "bunx tsc --noEmit --lib ESNext",
    "test": "bun test tests/",
    "format": "prettier --write -u *"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/pr0h0/bpl3.git"
  },
  "keywords": [
    "compiler",
    "transpiler",
    "llvm",
    "bpl",
    "language"
  ],
  "author": "pr0h0",
  "license": "Apache-2.0",
  "type": "commonjs",
  "private": false,
  "devDependencies": {
    "@types/bun": "latest"
  },
  "peerDependencies": {
    "typescript": "^5"
  },
  "dependencies": {
    "commander": "^14.0.2"
  }
}
