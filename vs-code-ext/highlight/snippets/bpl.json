{
  "Loop": {
    "prefix": "loop",
    "body": [
      "local ${1:i}: ${2:u64} = 0;",
      "loop {",
      "\tif ${1:i} >= ${3:10} {",
      "\t\tbreak;",
      "\t}",
      "\t$0",
      "\t${1:i} = ${1:i} + 1;",
      "}"
    ],
    "description": "Create a loop with a counter"
  },
  "Frame": {
    "prefix": "frame",
    "body": ["frame ${1:name}(${2:args}) ret ${3:u64} {", "\t$0", "}"],
    "description": "Define a new function frame"
  },
  "Print": {
    "prefix": "print",
    "body": ["call print(\"${1:message}\\n\");"],
    "description": "Print a message to stdout"
  },
  "Exit": {
    "prefix": "exit",
    "body": ["call exit(${1:code});"],
    "description": "Exit the program with a status code"
  },
  "Main": {
    "prefix": "main",
    "body": ["frame main() ret u8 {", "\t$0", "\treturn 0;", "}"],
    "description": "Main function template"
  },
  "Main args": {
    "prefix": "main args",
    "body": [
      "frame main(argc: u64, argv: u64) ret u8 {",
      "\t$0",
      "\treturn 0;",
      "}"
    ],
    "description": "Main function with argc and argv"
  },
  "If": {
    "prefix": "if",
    "body": ["if ${1:condition} {", "\t$0", "}"],
    "description": "Create an if statement"
  },
  "If Else": {
    "prefix": "ifelse",
    "body": ["if ${1:condition} {", "\t$0", "} else {", "\t", "}"],
    "description": "Create an if-else statement"
  },
  "If Elif Else": {
    "prefix": "ifelife",
    "body": [
      "if ${1:condition} {",
      "\t$0",
      "} elif ${2:condition} {",
      "\t",
      "} else {",
      "\t",
      "}"
    ],
    "description": "Create an if-elif-else statement"
  },
  "Struct": {
    "prefix": "struct",
    "body": ["struct ${1:Name} {", "\t${2:field1}: ${3:u64},", "\t$0", "}"],
    "description": "Define a new struct"
  },
  "External Function": {
    "prefix": "extern fn",
    "body": ["extern ${1:func_name}(${2:args}) ret ${3:u64};"],
    "description": "Declare an external function"
  },
  "Import": {
    "prefix": "import",
    "body": ["import ${1:module_name} from \"${2:path}\";"],
    "description": "Import a module"
  },
  "Import Type": {
    "prefix": "import type",
    "body": ["import [${1:TypeName}] from \"${2:path}\";"],
    "description": "Import a type definition from a module"
  },
  "Export": {
    "prefix": "export",
    "body": ["export ${1:item_type};"],
    "description": "Export an item from the module"
  },
  "Export Type": {
    "prefix": "export type",
    "body": ["export [${1:TypeName}];"],
    "description": "Export a type definition"
  },
  "Function call": {
    "prefix": "call",
    "body": ["call ${1:function_name}(${2:args});"],
    "description": "Call a function"
  },
  "ASM Block": {
    "prefix": "asm",
    "body": ["asm {", "\t$0", "}"],
    "description": "Insert an inline assembly block"
  },
  "Local variable declaration": {
    "prefix": "local",
    "body": ["local ${1:var_name}: ${2:u64} = ${3:0};"],
    "description": "Declare a local variable"
  },
  "Global variable declaration": {
    "prefix": "global",
    "body": ["global ${1:var_name}: ${2:u64} = ${3:0};"],
    "description": "Declare a global variable"
  },
  "Comment": {
    "prefix": "comment",
    "body": ["# ${1:This is a comment}"],
    "description": "Insert a comment"
  },
  "Return": {
    "prefix": "return",
    "body": ["return ${1:value};"],
    "description": "Return a value from a function"
  },
  "Break": {
    "prefix": "break",
    "body": ["break;"],
    "description": "Break out of a loop"
  },
  "Continue": {
    "prefix": "continue",
    "body": ["continue;"],
    "description": "Continue to the next iteration of a loop"
  }
}
