{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es2022",
    "outDir": "out",
    "lib": ["es2023"],
    "sourceMap": true,
    "rootDir": "../..",
    "strict": true,
    "noImplicitAny": false,
    "esModuleInterop": true,
    "skipLibCheck": true
  },
  "include": [
    "src/**/*",
    "../../lexer/**/*",
    "../../parser/**/*",
    "../../transpiler/**/*",
    "../../errors.ts",
    "../../util.ts"
  ]
}
