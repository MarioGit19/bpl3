{
  "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
  "name": "BPL",
  "patterns": [
    {
      "include": "#comments"
    },
    {
      "include": "#strings"
    },
    {
      "include": "#type-definitions"
    },
    {
      "include": "#variables"
    },
    {
      "include": "#match-type-syntax"
    },
    {
      "include": "#pattern-guards"
    },
    {
      "include": "#keywords"
    },
    {
      "include": "#constants"
    },
    {
      "include": "#types"
    },
    {
      "include": "#functions"
    },
    {
      "include": "#numbers"
    },
    {
      "include": "#operators"
    }
  ],
  "repository": {
    "type-definitions": {
      "patterns": [
        {
          "begin": "\\b(struct|type|class|spec)\\s+([a-zA-Z_][a-zA-Z0-9_]*)\\s*(:)",
          "beginCaptures": {
            "1": { "name": "storage.type.class.bpl" },
            "2": { "name": "entity.name.type.class.bpl" },
            "3": { "name": "punctuation.separator.inheritance.bpl" }
          },
          "end": "(?=\\{|\\n)",
          "patterns": [
            {
              "match": "([a-zA-Z_][a-zA-Z0-9_]*)",
              "name": "entity.name.type.inherited.bpl"
            },
            {
              "match": ",",
              "name": "punctuation.separator.comma.bpl"
            }
          ]
        },
        {
          "match": "\\b(struct|type|class|spec)\\s+([a-zA-Z_][a-zA-Z0-9_]*)",
          "captures": {
            "1": { "name": "storage.type.class.bpl" },
            "2": { "name": "entity.name.type.class.bpl" }
          }
        },
        {
          "begin": "(\\[)",
          "beginCaptures": {
            "1": { "name": "punctuation.section.brackets.begin.bpl" }
          },
          "end": "(\\])",
          "endCaptures": {
            "1": { "name": "punctuation.section.brackets.end.bpl" }
          },
          "patterns": [
            {
              "match": "\\b([a-zA-Z_][a-zA-Z0-9_]*)\\b",
              "name": "entity.name.type.class.bpl"
            },
            {
              "match": ",",
              "name": "punctuation.separator.comma.bpl"
            }
          ]
        }
      ]
    },
    "comments": {
      "patterns": [
        {
          "name": "comment.block.bpl",
          "begin": "###",
          "end": "###"
        },
        {
          "name": "comment.line.number-sign.bpl",
          "match": "#.*$"
        }
      ]
    },
    "strings": {
      "name": "string.quoted.double.bpl",
      "begin": "\"",
      "end": "\"",
      "patterns": [
        {
          "name": "constant.character.escape.bpl",
          "match": "\\\\."
        }
      ]
    },
    "variables": {
      "patterns": [
        {
          "match": "\\b(this)\\b",
          "name": "variable.language.this.bpl"
        },
        {
          "match": "\\b(local|global|const)\\s+([a-zA-Z_][a-zA-Z0-9_]*)",
          "captures": {
            "1": { "name": "storage.modifier.bpl" },
            "2": { "name": "variable.other.bpl" }
          }
        }
      ]
    },
    "keywords": {
      "patterns": [
        {
          "name": "keyword.control.bpl",
          "match": "\\b(if|else|loop|break|continue|return|switch|case|default|try|catch|catchOther|throw|import|from|as|export|extern|asm)\\b"
        },
        {
          "name": "storage.type.function.bpl",
          "match": "\\b(frame|func)\\b"
        },
        {
          "name": "storage.type.class.bpl",
          "match": "\\b(struct|type|spec|enum)\\b"
        },
        {
          "name": "storage.modifier.bpl",
          "match": "\\b(global|local|ret)\\b"
        },
        {
          "name": "keyword.other.bpl",
          "match": "\\b(extends|implements|cast|sizeof|match|new)\\b"
        }
      ]
    },
    "match-type-syntax": {
      "patterns": [
        {
          "match": "\\b(match)\\s*<\\s*([a-zA-Z_][a-zA-Z0-9_.]*)\\s*>",
          "captures": {
            "1": { "name": "keyword.other.match.bpl" },
            "2": { "name": "entity.name.type.bpl" }
          }
        }
      ]
    },
    "pattern-guards": {
      "patterns": [
        {
          "match": "=>\\s*(.*?)\\s+(if)\\s+",
          "captures": {
            "1": { "name": "variable.other.bpl" },
            "2": { "name": "keyword.control.conditional.guard.bpl" }
          }
        }
      ]
    },
    "constants": {
      "patterns": [
        {
          "name": "constant.language.bpl",
          "match": "\\b(true|false|null|nullptr)\\b"
        }
      ]
    },
    "types": {
      "patterns": [
        {
          "name": "storage.type.bpl",
          "match": "\\b(int|uint|float|string|bool|char|void|any|Func|Self)\\b"
        },
        {
          "match": "\\b([A-Z][a-zA-Z0-9_]*)\\.([A-Z][a-zA-Z0-9_]*)",
          "captures": {
            "1": { "name": "entity.name.type.enum.bpl" },
            "2": { "name": "variable.other.enummember.bpl" }
          }
        },
        {
          "match": "(:)\\s*([a-zA-Z_][a-zA-Z0-9_]*)",
          "captures": {
            "1": { "name": "keyword.operator.type.annotation.bpl" },
            "2": { "name": "entity.name.type.bpl" }
          }
        }
      ]
    },
    "functions": {
      "patterns": [
        {
          "name": "entity.name.function.bpl",
          "match": "\\b([a-zA-Z_][a-zA-Z0-9_]*)(?=\\s*\\()"
        }
      ]
    },
    "numbers": {
      "patterns": [
        {
          "name": "constant.numeric.hex.bpl",
          "match": "\\b0x[0-9a-fA-F]+\\b"
        },
        {
          "name": "constant.numeric.binary.bpl",
          "match": "\\b0b[0-1]+\\b"
        },
        {
          "name": "constant.numeric.octal.bpl",
          "match": "\\b0o[0-7]+\\b"
        },
        {
          "name": "constant.numeric.float.bpl",
          "match": "\\b\\d+\\.\\d+\\b"
        },
        {
          "name": "constant.numeric.integer.bpl",
          "match": "\\b\\d+\\b"
        }
      ]
    },
    "operators": {
      "patterns": [
        {
          "name": "keyword.operator.bpl",
          "match": "(\\+|\\-|\\*|/|%|=|==|!=|<|>|<=|>=|&&|\\|\\||!|\\.|:|\\?|\\^|&|\\||~|<<|>>|\\+\\+|\\-\\-)"
        }
      ]
    }
  },
  "scopeName": "source.bpl"
}
